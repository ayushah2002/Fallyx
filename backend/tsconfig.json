{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "rootDir": ".",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
